<Window x:Class="Украшения.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Украшения"
        mc:Ignorable="d"
        Title="Sharipov"  Height="550" Width="900" MinWidth="900" MinHeight="550" Icon="Resources\icon.ico" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="75"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid  Background="#FFFFCC99">
            <Image Source="Resources\logo.png" HorizontalAlignment="Left"></Image>
            <TextBlock Text="ООО «Украшение»" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" ></TextBlock>
            <Button Name="BackBtn" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BackBtn_Click" Content="Назад" ></Button>
        </Grid>
        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
